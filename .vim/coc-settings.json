{
  "coc.preferences.jumpCommand": "drop",

  "coc.preferences.formatOnSaveFiletypes": [],
  "coc.preferences.formatOnType": false,

  "coc.preferences.rootPatterns":[
    "package.json",
    "tsconfig.json",
    ".git",
    ".hg",
    ".projections.json"
  ],

  "diagnostic.errorSign": "xx",
  "diagnostic.warningSign": "!!",
  "diagnostic.infoSign": ">>",
  "diagnostic.hintSign": ">>",
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "▶︎ ",

  "typescript.format.enabled": false,
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.referencesCodeLens.enable": false,
  "typescript.implementationsCodeLens.enable": false,

  "javascript.format.enabled": false,
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.referencesCodeLens.enable": false,
  "javascript.implementationsCodeLens.enable": false,

  "tsserver.log": "off",
  "tsserver.formatOnType": false,

  "codeLens.enable": false,

  "eslint.autoFixOnSave": true,
  "eslint.run": "onType",
  "eslint.filetypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact"
  ],
  "eslint.codeAction.disableRuleComment": {
    "enable": true,
    "location": "separateLine"
  },

  "snippets.extends": {
    "javascriptreact": ["javascript"],
    "typescript": ["javascript"],
    "typescriptreact": ["javascript"]
  },

  "snippets.priority": 95,
  "snippets.loadFromExtensions": false,

  "coc.source.issues.enable": false
}
